<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= author.name %>'s Books</title>
  </head>
  <body>
    <header>
      <div><%= author.name %>'s Books</div>
    </header>
    <section>
      <% if (books.length) { %> <% books.forEach((book) => { %>
      <div>
        <div><%= book.title %></div>
        <div><%= book.pages %></div>
      </div>
      <% }) %> <% } else { %>
      <div>No Books for "<%= author.name %>".</div>
      <% } %>
    </section>
    <section>
      <button>+</button>
      <div>Update Author</div>
      <form action="/author/<%= author.id %>" method="POST">
        <label for="updated_author">Author:</label>
        <input
          type="text"
          name="updated_author"
          id="updated_author"
          value="<%= author.name %>"
          required
        />
        <label for="update_password">Password:</label>
        <input type="password" name="password" id="update_password" />
        <button type="submit">Submit Author</button>
      </form>
    </section>
    <section>
      <form action="/author/<%= author.id %>/delete" method="POST">
        <button type="submit">-</button>
        <label for="delete_password">Password:</label>
        <input type="password" name="password" id="delete_password" />
        <div>Delete Author</div>
      </form>
    </section>
  </body>
</html>
