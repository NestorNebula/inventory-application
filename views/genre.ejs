<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/styles.css" />
    <link rel="stylesheet" href="/styles/genre-author.css" />
    <script src="/scripts/forms.js" defer></script>
    <title><%= genre.genre %> Books</title>
  </head>
  <body>
    <header>
      <div><%= genre.genre %> Books</div>
    </header>
    <div class="background-font"></div>
    <main>
      <section class="books">
        <% if (books.length) { %> <% books.forEach((book) => { %>
        <div class="book">
          <a class="book-link" href="/book/<%= book.id %>"><%= book.title %></a>
        </div>
        <% }) %> <% } else { %>
        <div>No Books for the "<%= genre.genre %>" genre.</div>
        <% } %>
      </section>
      <section class="form-grid">
        <button class="plus-button opener" aria-label="open new book form"><img class="plusimg" src="/assets/icons/plus.png" alt=""></button>
        <div>Update Genre</div>
        <form class="form dynamic hidden" action="/genre/<%= genre.id %>" method="POST">
          <label for="updated_genre">Genre:</label>
          <input
            type="text"
            id="updated_genre"
            name="updated_genre"
            value="<%= genre.genre %>"
            required
          />
          <label for="update_password">Password:</label>
          <input type="password" name="password" id="update_password" />
          <button type="submit" class="formbtn">Submit Genre</button>
        </form>
      </section>
      <section class="form-grid">
        <button class="minus-button opener" aria-label="open new book form"><img class="minusimg" src="/assets/icons/minus-sign.png" alt=""></button>
        <div>Delete Genre</div>
        <form class="form dynamic hidden" action="/genre/<%= genre.id %>/delete" method="POST">
          <label for="delete_password">Password:</label>
          <input type="password" name="password" id="delete_password" />
          <button class="formbtn" type="submit">Confirm</button>
        </form>
      </section>
    </main>
    <%- include('footer') %>
  </body>
</html>
