<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= book.title %></title>
  </head>
  <body>
    <header>
      <div><%= book.title %></div>
    </header>
    <section>
      <div><%= book.pages %></div>
      <div><%= book.plot %></div>
      <a href="/author/<%= book.author_id %>"><%= book.author_id %></a>
      <div>
        <div>Genres:</div>
        <% book_genres.forEach((genre) => { %>
        <a href="/genre/<%= genre.genre_id %>"><%= genre.genre %></a>
        <% }) %>
      </div>
    </section>
    <section>
      <button>+</button>
      <div>Update Book</div>
      <form action="/book/<%= id %>" method="POST">
        <label for="title">Title:</label>
        <input
          type="text"
          name="title"
          id="title"
          value="<%= book.title %>"
          required
        />
        <label for="pages">Pages:</label>
        <input
          type="number"
          name="pages"
          id="pages"
          value="<%= book.pages %>"
          required
        />
        <label for="plot">Plot:</label>
        <textarea name="plot" id="plot"><%= book.plot %></textarea>
        <label for="author_id">Author:</label>
        <select name="author_id" id="author_id">
          <option value="none">Not in the list</option>
          <% authors.forEach((author) => { %> <% if (book.author_id ===
          author.id) { %>
          <option value="<%= author.id %>" selected><%= author.name %></option>
          <% } else { %>
          <option value="<%= author.id %>"><%= author.name %></option>
          <% } %> <% }) %>
        </select>
        <fieldset>
          <legend>Add at least one genre for the Book</legend>
          <% genres.forEach((genre) => { %> <% if (book_genres.some((g) =>
          g.genre_id === genre.id)) { %>
          <input
            type="checkbox"
            value="<%= genre.id %>"
            name="book_genres"
            id="genre <%= genre.id %>"
            checked
          />
          <% } else { %>
          <input
            type="checkbox"
            value="<%= genre.id %>"
            name="book_genres"
            id="genre <%= genre.id %>"
          />
          <% } %>
          <label for="genre <%= genre.id %>"><%= genre.genre %></label>
          <% }) %>
        </fieldset>
        <button type="submit">Submit Book</button>
      </form>
    </section>
    <section>
      <form action="/book/<%= id %>/delete" method="POST">
        <button type="submit">-</button>
        <div>Delete Book</div>
      </form>
    </section>
  </body>
</html>
